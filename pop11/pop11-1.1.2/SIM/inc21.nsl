declare inc21 {
  input     in[21];
  output    out[21];
  func_in do(in);
}

module inc21 {
       
  wire s0,s1,s2,s3,s4,s5,s6;
  wire s7,s8,s9,s10,s11,s12;
  wire s13,s14,s15,s16,s17,s18,s19,s20;

  func do {
    s0 =~in[0];
    s1 = in[1] ^ in[0];
    s2 = in[2] ^ (&in[1:0]);
    s3 = in[3] ^ (&in[2:0]);
    s4 = in[4] ^ (&in[3:0]);
    s5 = in[5] ^ (&in[4:0]);
    s6 = in[6] ^ (&in[5:0]);
    s7 = in[7] ^ (&in[6:0]);
    s8 = in[8] ^ (&in[7:0]);
    s9 = in[9] ^ (&in[8:0]);
    s10= in[10] ^ (&in[9:0]);
    s11= in[11] ^ (&in[10:0]);
    s12= in[12] ^ (&in[11:0]);
    s13= in[13] ^ (&in[12:0]);
    s14= in[14] ^ (&in[13:0]);
    s15= in[15] ^ (&in[14:0]);
    s16= in[16] ^ (&in[15:0]);
    s17= in[17] ^ (&in[16:0]);
    s18= in[18] ^ (&in[17:0]);
    s19= in[19] ^ (&in[18:0]);
    s20= in[20] ^ (&in[19:0]);
    out = {s20,s19,s18,s17,s16,s15,s14,s13,s12,
          s11,s10,s9,s8,s7,s6,s5,s4,s3,s2,s1,s0};
  }
}
